<!DOCTYPE html>
<html lang="en" class="<%= @classes %>">
<head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href='https://fonts.googleapis.com/css?family=Lato:300italic,700italic,400' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/stylesheets/materialize.css">
  <link rel="stylesheet" href="/stylesheets/normalize.css">
  <link rel="stylesheet" href="/stylesheets/application.css">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/javascript/materialize.js"></script>
  <script src="/javascript/application.js"></script>

<title></title>
</head>
<body class="<%= @classes %>">

<div class="parallax-container <%= @parallax_class %>">
  <nav class="z-depth-0">
    <div class="nav-wrapper">
      <div class="container">
        <div class="col s12">
          <ul class="right">
            <li><a href="/">Home</a></li>
          <% if logged_in? %>
            <li><a href="/users/<%= current_user.id %>">My Wall</a></li>
            <li><a href="/logout">Log out</a></li>
          <% else %>
            <li><a href="/login">Log in</a></li>
            <li><a href="/signup">Sign up</a></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
  <div class="parallax">

  <% if request.path_info != "/" %>
    <img src="/images/blurry-background.jpg"></div>
  <% else %>
    <img src="/images/background.jpg"></div>
  <% end %>

<% if request.path_info == '/' %>
<div class="row">
  <div class="col s8 offset-s2 m6 offset-m3"> 
      <div class="<%= @card_class %> z-depth-0" id="mood-form">
        <p class="mood_text">What mood are you in?</p>
          <form method="post" action="/">
            <div class="input-field">
              <label for="name" class=""></label>
              <input type="text" name="name" required></div>
              <div class="submit">

              <div>
                <button type="submit" class="btn waves-effect waves-light" id="search" value="Go!">Go!</button>

                <div class="switch">
                  <label>
                    stickers
                    <input type="checkbox" name="switchbox">
                    <span class="lever"></span>
                    gifs
                  </label>
                </div>
              </div>

            </div>
          </form>
        </div>
    </div>
</div>
<% else %>
<div class="row">
  <div class="col s8 offset-s2 m6 offset-m3">
      <div class="<%= @card_class %> z-depth-0" id="mood-form">
      </div>
  </div>
</div>
<% end %>
</div>

<% if request.path_info != '/' %>
  <div class="section white">
    <div class="row container">
  <% end %>
    <%= yield %>
  </div>
  
</div>

</body>
</html>










